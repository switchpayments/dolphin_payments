#!/usr/bin/env node

var app = require('../app');
var http = require('http');
var port = 3000;
app.set('port', port);

var server = http.createServer(app);
server.listen(port);

server.on('listening', () => {
  var addr = server.address();
  var bind = typeof addr === 'string' ? `pipe ${addr}` : `port ${addr.port}`;
  console.log(`Listening on ${bind}`);
});
